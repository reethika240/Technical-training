#include <stdio.h>
#include <string.h>

int value(char r) {
    switch (r) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0;
    }
}

int romanToInt(char roman[]) {
    int i, total = 0;
    int len = strlen(roman);

    for (i = 0; i < len; i++) {
        int s1 = value(roman[i]);
        if (i + 1 < len) {
            int s2 = value(roman[i + 1]);
            if (s1 >= s2)
                total += s1;
            else {
                total += s2 - s1;
                i++; // skip next character
            }
        } else {
            total += s1;
        }
    }
    return total;
}

int main() {
    char roman[20];

    printf("Enter a Roman numeral (in capital letters): ");
    scanf("%s", roman);

    printf("Integer value is: %d\n", romanToInt(roman));
    return 0;
}
