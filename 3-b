#include <stdio.h>
#include <ctype.h> // for tolower()
#include <string.h>

int main() {
    char str[200];
    int alphabet[26] = {0};
    int i, index, isPangram = 1;

    printf("Enter a string: ");
    gets(str); // read full sentence

    for (i = 0; i < strlen(str); i++) {
        char ch = tolower(str[i]);
        if (ch >= 'a' && ch <= 'z') {
            index = ch - 'a';
            alphabet[index] = 1; // mark letter as found
        }
    }

    for (i = 0; i < 26; i++) {
        if (alphabet[i] == 0) {
            isPangram = 0;
            break;
        }
    }

    if (isPangram)
        printf("The string is a Pangram.\n");
    else
        printf("The string is NOT a Pangram.\n");

    return 0;
}
