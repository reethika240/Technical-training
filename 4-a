#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file1, *file2, *mergeFile;
    char ch;

    // Open first file in read mode
    file1 = fopen("file1.txt", "r");
    if (file1 == NULL) {
        printf("Error! Cannot open file1.txt\n");
        exit(1);
    }

    // Open second file in read mode
    file2 = fopen("file2.txt", "r");
    if (file2 == NULL) {
        printf("Error! Cannot open file2.txt\n");
        fclose(file1);
        exit(1);
    }

    // Open third file in write mode
    mergeFile = fopen("merged.txt", "w");
    if (mergeFile == NULL) {
        printf("Error! Cannot create merged.txt\n");
        fclose(file1);
        fclose(file2);
        exit(1);
    }

    // Copy contents of first file
    while ((ch = fgetc(file1)) != EOF)
        fputc(ch, mergeFile);

    // Copy contents of second file
    while ((ch = fgetc(file2)) != EOF)
        fputc(ch, mergeFile);

    printf("Files merged successfully into 'merged.txt'\n");

    // Close all files
    fclose(file1);
    fclose(file2);
    fclose(mergeFile);

    return 0;
}
