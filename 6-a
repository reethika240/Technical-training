#include <stdio.h>

// Function to calculate average
float findAverage(int arr[], int n) {
    int sum = 0;
    for (int i = 0; i < n; i++) {
        sum += arr[i];
    }
    return (float)sum / n;
}

int main() {
    int arr[100], n, i;
    float average;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Pass array to function
    average = findAverage(arr, n);

    printf("\nAverage of the array elements = %.2f\n", average);

    return 0;
}
