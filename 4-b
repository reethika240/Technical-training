#include <stdio.h>
#include <stdlib.h>

struct Student {
    int rollNo;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp;
    int n, i;

    // Open file in write mode to store records
    fp = fopen("students.txt", "w");
    if (fp == NULL) {
        printf("Error opening file!\n");
        exit(1);
    }

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Store student records
    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d:\n", i + 1);
        printf("Roll Number: ");
        scanf("%d", &s.rollNo);
        printf("Name: ");
        scanf("%s", s.name);
        printf("Marks: ");
        scanf("%f", &s.marks);

        fprintf(fp, "%d %s %.2f\n", s.rollNo, s.name, s.marks);
    }

    fclose(fp);
    printf("\nRecords saved successfully to 'students.txt'\n");

    // Read records from the file
    fp = fopen("students.txt", "r");
    if (fp == NULL) {
        printf("Error opening file!\n");
        exit(1);
    }

    printf("\n--- Student Records ---\n");
    while (fscanf(fp, "%d %s %f", &s.rollNo, s.name, &s.marks) != EOF) {
        printf("Roll No: %d\tName: %s\tMarks: %.2f\n", s.rollNo, s.name, s.marks);
    }

    fclose(fp);
    return 0;
}
